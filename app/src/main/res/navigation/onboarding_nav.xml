<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/onboarding_nav"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.dennisiluma.hagglex.LoginFragment"
        tools:layout="@layout/fragment_login"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.dennisiluma.hagglex.RegistrationFragment"
        android:label="RegistrationFragment"
        tools:layout="@layout/fragment_registration" >
        <action
            android:id="@+id/action_registrationFragment_to_verifyEmailFragment"
            app:destination="@id/verifyEmailFragment" />
    </fragment>
    <fragment
        android:id="@+id/verifyEmailFragment"
        android:name="com.dennisiluma.hagglex.VerifyEmailFragment"
        tools:layout="@layout/fragment_verify_email"
        android:label="VerifyEmailFragment" >
        <action
            android:id="@+id/action_verifyEmailFragment_to_setupCompleteFragment"
            app:destination="@id/setupCompleteFragment" />
    </fragment>
    <fragment
        android:id="@+id/setupCompleteFragment"
        android:name="com.dennisiluma.hagglex.SetupCompleteFragment"
        android:label="fragment_setup_complete"
        tools:layout="@layout/fragment_setup_complete" >
        <action
            android:id="@+id/action_setupCompleteFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>